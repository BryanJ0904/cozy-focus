<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_level"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <TextView
        android:id="@+id/tv_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="4/5"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/progress_circle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tasks"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:max="5"
        android:progress="4"
        android:layout_marginTop="15dp"
        android:progressDrawable="@drawable/progress_bar"
        />

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_circle"
        android:text="Finish 5 tasks to level up."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btn_increment_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_instruction"
        android:layout_centerHorizontal="true"
        android:text="Complete Task"
        android:layout_marginTop="30dp" />

</RelativeLayout>
