<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background ring -->
    <item android:id="@android:id/background">
        <shape
            android:shape="ring"
            android:useLevel="false">
            <solid android:color="@color/primary_light" />
            <size
                android:width="80dp"
                android:height="80dp" />
            <thickness android:thickness="16dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <shape android:shape="ring">
            <gradient
                android:angle="0"
                android:endColor="@color/stroke_primary"
                android:startColor="@color/stroke_primary" />
            <size
                android:width="80dp"
                android:height="80dp" />
            <thickness android:thickness="16dp" />
        </shape>
    </item>

</layer-list>
